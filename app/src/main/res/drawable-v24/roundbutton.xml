<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="#8C0000" />
            <gradient android:angle="-90" android:startColor="#8C0000" android:endColor="#8C0000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="#1A2725" />
            <solid android:color="#080B0A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="#959796" />
            <gradient android:angle="-90" android:startColor="#000000" android:endColor="#E45E5D5D" />
        </shape>
    </item>
</selector>